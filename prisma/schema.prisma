// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model products {
  id               Int      @id @default(autoincrement())
  brand            String   @db.Text
  title            String   @db.Text
  price            Decimal  @db.Decimal(6, 2)
  weight           Int      @db.Integer
  process          String   @db.Text
  process_category String   @db.Text
  variety          String[] @db.Text
  country          String   @db.Text
  continent        String   @db.Text
  product_url      String   @unique @db.Text
  image_url        String   @db.Text
  sold_out         Boolean  @db.Boolean
  date_added       DateTime @db.Timestamp()
  vendor           String   @db.Text
  handle           String   @db.Text
  tasting_notes    String[] @db.Text
}

